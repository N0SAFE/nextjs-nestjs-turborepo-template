{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API with tRPC, Drizzle ORM, and Better Auth",
  "main": "dist/main.js",
  "scripts": {
    "build": "bun --bun scripts/build.ts",
    "compile": "bun x cross-env COMPILE_MODE=true bun run build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "bun --bun scripts/entrypoint.dev.ts",
    "prod": "bun --bun scripts/entrypoint.prod.ts",
    "start": "bun --bun nest start --preserveWatchOutput",
    "start:dev": "bun --bun src/main",
    "start:debug": "bun --bun nest start --debug --watch --preserveWatchOutput",
    "start:prod": "bun --bun dist/main",
    "clean": "rimraf dist",
    "lint": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "bun src/cli.ts migrate",
    "db:seed": "bun src/cli.ts seed",
    "db:reset": "bun src/cli.ts reset",
    "db:push": "drizzle-kit push",
    "cli": "bun src/cli.ts",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "bun x @better-auth/cli generate --config src/auth.ts --output src/config/drizzle/schema/auth.ts --y && bun run db:generate"
  },
  "dependencies": {
    "eslint": "catalog:linting",
    "@mguay/nestjs-better-auth": "catalog:auth",
    "@nestjs/common": "catalog:api:nest",
    "@nestjs/config": "catalog:api:nest",
    "@nestjs/core": "catalog:api:nest",
    "@nestjs/platform-express": "catalog:api:nest",
    "@orpc/client": "catalog:orpc",
    "@orpc/contract": "catalog:orpc",
    "@orpc/nest": "catalog:orpc",
    "@orpc/openapi": "catalog:orpc",
    "@orpc/server": "catalog:orpc",
    "@orpc/shared": "catalog:orpc",
    "@orpc/zod": "catalog:orpc",
    "@repo/api-contracts": "*",
    "@scalar/nestjs-api-reference": "catalog:api:nest",
    "@vitest/coverage-istanbul": "catalog:testing",
    "bcrypt": "catalog:database",
    "better-auth": "catalog:auth",
    "drizzle-kit": "catalog:database",
    "drizzle-orm": "catalog:database",
    "express": "catalog:api:nest",
    "express-list-routes": "catalog:api:nest",
    "nanoid": "catalog:database",
    "nest-commander": "catalog:api:nest",
    "nestjs-flub": "catalog:api:nest",
    "openapi-merge": "catalog:api:nest",
    "pg": "catalog:api:nest",
    "reflect-metadata": "catalog:api:nest",
    "rxjs": "catalog:api:nest",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@nestjs/cli": "catalog:api:nest",
    "@nestjs/schematics": "catalog:api:nest",
    "@nestjs/testing": "catalog:api:nest",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@types/bcrypt": "catalog:database",
    "@types/express": "catalog:api:nest",
    "@types/node": "catalog:build",
    "@types/pg": "^8.15.6",
    "source-map-support": "catalog:api:nest",
    "ts-loader": "catalog:api:nest",
    "ts-node": "catalog:api:nest",
    "tsconfig-paths": "catalog:api:nest",
    "tsx": "catalog:api:nest",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
