{
  "extends": "@repo-configs/typescript/config/nextjs.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./*"]
    },
    "target": "ES2017"
  },
  "include": [
    "tailwind.config.mts",
    "eslint.config.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
