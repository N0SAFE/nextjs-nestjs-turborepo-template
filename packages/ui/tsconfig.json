{
    "extends": "@repo/tsconfig/config/nextjs.json",
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@repo/*": [
                "../*"
            ],
            "@repo/ui/*": [
                "./*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tsup.config.ts"
    ]
}