{
  "name": "@repo/ui",
  "version": "1.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": [
        "./src/index.ts",
        "./src/index.tsx"
      ],
      "import": "./src/index.ts"
    },
    "./*": {
      "types": [
        "./src/*.ts",
        "./src/*.tsx"
      ],
      "import": "./src/*"
    },
    "./styles/globals.css": "./src/styles/globals.css"
  },
  "license": "MIT",
  "scripts": {
    "build": "bun scripts/build.ts",
    "compile": "bun x cross-env COMPILE_MODE=true bun run build",
    "clean": "rimraf dist",
    "dev": "bun run build -- --watch",
    "prettify": "bun x --bun prettier ./**/*.{ts,tsx,js,jsx,css} --write --no-error-on-unmatched-pattern",
    "lint": "eslint \"**/*.ts*\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ui:add": "bun x --bun shadcn@latest add --"
  },
  "peerDependencies": {
    "react": "catalog:react",
    "@hookform/resolvers": "catalog:utils",
    "class-variance-authority": "catalog:ui",
    "clsx": "catalog:styling",
    "cmdk": "catalog:ui",
    "framer-motion": "catalog:ui",
    "lucide-react": "catalog:ui",
    "next-themes": "catalog:next",
    "react-hook-form": "catalog:react",
    "sonner": "catalog:ui",
    "tailwind-merge": "catalog:styling",
    "tailwindcss-animate": "catalog:styling",
    "tw-animate-css": "catalog:ui",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@eslint/eslintrc": "catalog:linting",
    "@eslint/js": "catalog:linting",
    "@repo/config-eslint": "*",
    "@repo/config-prettier": "*",
    "@repo/config-tailwind": "*",
    "@repo/config-typescript": "*",
    "@repo/types": "*",
    "@repo/config-vitest": "*",
    "@tailwindcss/postcss": "catalog:styling",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/react": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "@types/node": "catalog:build",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "@vitejs/plugin-react": "catalog:testing",
    "@parcel/watcher": "^2.5.0",
    "delete-cli": "^0.1.3",
    "eslint": "catalog:linting",
    "jsdom": "catalog:testing",
    "next": "catalog:next",
    "postcss": "catalog:styling",
    "prettier-plugin-tailwindcss": "catalog:linting",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "tailwind-variants": "catalog:styling",
    "tailwindcss": "catalog:styling",
    "tsup": "^8.5.0",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  },
  "dependencies": {
    "@hookform/resolvers": "catalog:utils",
    "class-variance-authority": "catalog:ui",
    "clsx": "catalog:styling",
    "cmdk": "^1.1.1",
    "concurrently": "^9.2.1",
    "framer-motion": "catalog:ui",
    "lucide-react": "catalog:ui",
    "next-themes": "catalog:next",
    "radix-ui": "catalog:ui",
    "react-hook-form": "catalog:react",
    "react-use": "^17.6.0",
    "recharts": "3.6.0",
    "rimraf": "catalog:build",
    "sonner": "catalog:ui",
    "tailwind-merge": "catalog:styling",
    "tailwindcss-animate": "catalog:styling",
    "tw-animate-css": "catalog:ui",
    "zod": "catalog:utils"
  },
  "overrides": {
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react"
  }
}
