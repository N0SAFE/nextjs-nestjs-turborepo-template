{
  "name": "@repo/vitest-config",
  "version": "1.0.0",
  "private": true,
  "description": "Shared Vitest configuration for the monorepo",
  "main": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./base": {
      "import": "./src/base.ts",
      "require": "./src/base.ts"
    },
    "./react": {
      "import": "./src/react.ts",
      "require": "./src/react.ts"
    },
    "./node": {
      "import": "./src/node.ts",
      "require": "./src/node.ts"
    },
    "./nextjs": {
      "import": "./src/nextjs.ts",
      "require": "./src/nextjs.ts"
    }
  },
  "files": [
