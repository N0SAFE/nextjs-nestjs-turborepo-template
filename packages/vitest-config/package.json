{
  "name": "@repo/vitest-config",
  "version": "1.0.0",
  "private": true,
  "description": "Shared Vitest configuration for the monorepo",
  "main": "dist/cjs/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./base": {
      "import": "./dist/esm/base.js",
      "require": "./dist/cjs/base.js"
    },
    "./react": {
      "import": "./dist/esm/react.js",
      "require": "./dist/cjs/react.js"
    },
    "./node": {
      "import": "./dist/esm/node.js",
      "require": "./dist/cjs/node.js"
    },
    "./nextjs": {
      "import": "./dist/esm/nextjs.js",
      "require": "./dist/cjs/nextjs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun scripts/build.ts",
    "clean": "rimraf dist",
    "dev": "bun scripts/build.ts --watch",
    "test": "echo 'vitest-config package ready'"
  },
  "keywords": ["vitest", "testing", "config"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chokidar": "catalog:build",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/react": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "@types/node": "catalog:build",
    "@vitejs/plugin-react": "catalog:testing",
    "jsdom": "catalog:testing",
    "vitest": "catalog:testing"
  }
}
