{
    "name": "@repo/nextjs-devtool",
    "version": "0.1.0",
    "license": "MIT",
    "private": true,
    "sideEffects": [
        "**/*.css"
    ],
    "main": "src/index.ts",
    "module": "src/index.ts",
    "types": "src/index.d.ts",
    "exports": {
        ".": {
            "types": "./src/index.d.ts",
            "import": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./server": {
            "types": "./src/server/index.ts",
            "import": "./src/server/index.ts",
            "default": "./src/server/index.ts"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "build:demo": "tsc -p tsconfig.json && node ./dist/main.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "prettify": "bun x --bun prettier ./**/*.{ts,tsx,js,jsx} --write --no-error-on-unmatched-pattern"
    },
    "peerDependencies": {
        "next": "catalog:next",
        "react": "catalog:react",
        "react-dom": "catalog:react"
    },
    "dependencies": {
        "@orpc/client": "catalog:orpc",
        "@orpc/contract": "catalog:orpc",
        "@orpc/openapi-client": "catalog:orpc",
        "@orpc/server": "catalog:orpc",
        "@repo/ui": "*",
        "lucide-react": "catalog:ui",
        "zustand": "catalog:utils",
        "zod": "catalog:utils"
    },
    "devDependencies": {
        "@eslint/eslintrc": "catalog:linting",
        "@eslint/js": "catalog:linting",
        "@repo/eslint-config": "*",
        "@repo/prettier-config": "*",
        "@repo/tsconfig": "*",
        "@repo/vitest-config": "*",
        "@types/node": "catalog:build",
        "@types/react": "catalog:react",
        "@types/react-dom": "catalog:react",
        "typescript": "catalog:build",
        "vitest": "catalog:testing"
    }
}
