{
  "name": "@repo/env",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./cli": "./src/cli.ts",
    "./utils": "./src/utils.ts",
    "./constants": "./src/constants.ts",
    "./validate": "./src/validate.ts",
    "./mock": "./src/mock.ts"
  },
  "bin": {
    "check": "./src/cli.ts",
    "load": "./src/cli.ts",
    "mock": "./src/cli.ts"
  },
  "scripts": {
    "prettify": "prettier . --write --no-error-on-unmatched-pattern",
    "format": "bun run prettify",
    "format:check": "prettier . --check --no-error-on-unmatched-pattern",
    "type-check": "tsc --noEmit",
    "check": "bun src/cli.ts check",
    "load": "bun src/cli.ts load",
    "mock": "bun src/cli.ts mock",
    "test": "vitest run"
  },
  "dependencies": {
    "dotenv": "catalog:dev",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@repo/config-prettier": "*",
    "@repo/config-typescript": "*",
    "typescript": "catalog:build",
    "vitest": "catalog:testing",
    "@vitest/coverage-v8": "catalog:testing"
  }
}
