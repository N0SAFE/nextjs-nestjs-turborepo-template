{
  "name": "@repo/logger",
  "version": "1.0.0",
  "description": "Pino-based logger for Next.js and NestJS applications",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "prettify": "prettier . --write --no-error-on-unmatched-pattern",
    "format": "bun run prettify",
    "format:check": "prettier . --check --no-error-on-unmatched-pattern",
    "lint": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^10.2.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@repo/config-eslint": "*",
    "@repo/config-prettier": "*",
    "@repo/config-typescript": "*",
    "eslint": "catalog:linting",
    "typescript": "catalog:build"
  }
}
