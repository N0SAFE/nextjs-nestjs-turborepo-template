{
  "extends": "@repo-configs/typescript/config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "noEmit": true
  },
  "include": ["src/**/*", "eslint.config.ts"],
  "exclude": ["node_modules"]
}
