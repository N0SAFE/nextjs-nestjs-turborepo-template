{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo-configs/typescript/config/base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": false,
    "inlineSources": false,
    "preserveWatchOutput": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
