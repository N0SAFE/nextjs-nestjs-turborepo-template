{
  "name": "@repo-bin/scaffold",
  "version": "0.1.0",
  "description": "CLI tool to scaffold NestJS + Next.js Turborepo projects from builder-ui configurations",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "scaffold": "dist/main.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "exports": {
    ".": "./dist/main.js",
    "./templates/*": "./templates/*"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "nest build --watch",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "prettify": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "cli",
    "scaffold",
    "nestjs",
    "nextjs",
    "turborepo",
    "monorepo",
    "template"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "catalog:api:nest",
    "@nestjs/core": "catalog:api:nest",
    "boxen": "catalog:ui",
    "commander": "catalog:utils",
    "diff": "catalog:utils",
    "execa": "catalog:utils",
    "fs-extra": "catalog:utils",
    "glob": "catalog:utils",
    "handlebars": "catalog:utils",
    "kleur": "catalog:utils",
    "log-symbols": "catalog:utils",
    "nest-commander": "catalog:api:nest",
    "ora": "catalog:ui",
    "prompts": "catalog:utils",
    "reflect-metadata": "catalog:api:nest",
    "rxjs": "catalog:api:nest",
    "uuid": "^13.0.0",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@nestjs/cli": "catalog:api:nest",
    "@nestjs/schematics": "catalog:api:nest",
    "@nestjs/testing": "catalog:api:nest",
    "@repo-configs/typescript": "*",
    "@repo-configs/vitest": "*",
    "@types/fs-extra": "catalog:utils",
    "@types/node": "catalog:build",
    "@types/prompts": "catalog:utils",
    "@types/uuid": "^11.0.0",
    "@vitest/coverage-v8": "catalog:testing",
    "@vitest/ui": "catalog:testing",
    "rimraf": "catalog:build",
    "typescript": "catalog:build",
    "vitest": "catalog:testing"
  }
}
