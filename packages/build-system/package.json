{
  "name": "@repo/build-system",
  "version": "0.0.1",
  "type": "module",
  "description": "Monorepo build orchestration package for standardized builds across workspace packages",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "build-system": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "nest build",
    "build:inner": "bun x tsc -p tsconfig.build.json && bun src/cli.ts build . --clean",
    "clean": "rimraf dist",
    "prettify": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "dev:inner": "bun x tsc -p tsconfig.build.json && node dist/cli.js build . --watch",
    "lint": "echo 'No linting configured'",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@nestjs/common": "catalog:api:nest",
    "@nestjs/core": "catalog:api:nest",
    "chokidar": "^4.0.3",
    "commander": "catalog:utils",
    "execa": "^9.6.0",
    "nest-commander": "catalog:api:nest",
    "reflect-metadata": "catalog:api:nest",
    "rxjs": "catalog:api:nest",
    "zod": "catalog:utils"
  },
  "devDependencies": {
    "@nestjs/cli": "catalog:api:nest",
    "@nestjs/schematics": "catalog:api:nest",
    "@nestjs/testing": "catalog:api:nest",
    "@repo/tsconfig": "*",
    "@repo/vitest-config": "*",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "catalog:build",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3",
    "rimraf": "catalog:build",
    "rollup": "^4.52.5",
    "typescript": "^5.9.3",
    "vitest": "catalog:testing"
  }
}
