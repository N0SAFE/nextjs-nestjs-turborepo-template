{
  "name": "@repo-configs/vitest",
  "version": "1.0.0",
  "private": true,
  "description": "Shared Vitest configuration for the monorepo",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "import": "./dist/base.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js"
    },
    "./nextjs": {
      "types": "./dist/nextjs.d.ts",
      "import": "./dist/nextjs.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "compile": "tsc",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "test": "echo 'vitest-config package ready'"
  },
  "keywords": ["vitest", "testing", "config"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "chokidar": "catalog:build",
    "@testing-library/jest-dom": "catalog:testing",
    "@testing-library/react": "catalog:testing",
    "@testing-library/user-event": "catalog:testing",
    "@types/node": "catalog:build",
    "@vitejs/plugin-react": "catalog:testing",
    "jsdom": "catalog:testing",
    "vitest": "catalog:testing"
  }
}
