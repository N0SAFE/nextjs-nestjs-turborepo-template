{
  "name": "@repo/mcp-repo",
  "version": "1.0.0",
  "description": "MCP server for managing monorepo packages, commands, and scaffolding",
  "author": "",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "bin": {
    "mcp-repo": "dist/main.js"
  },
  "license": "UNLICENSED",
  "scripts": {
    "build": "bun --bun nest build",
    "compile": "bun x cross-env COMPILE_MODE=true bun run build",
    "dev": "bun run start:dev:inspector",
    "start": "bun --bun nest start --preserveWatchOutput",
    "start:dev": "bun --bun nest start --watch --preserveWatchOutput",
    "start:debug": "bun --bun nest start --debug --watch --preserveWatchOutput",
    "start:prod": "bun --bun dist/main.js",
    "start:dev:inspector": "npx @modelcontextprotocol/inspector bun --bun nest start --watch --preserveWatchOutput",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@rekog/mcp-nest": "^1.8.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^4.0.6"
  },
  "engines": {
    "bun": ">=1.2.14"
  }
}
