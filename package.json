    "scripts": {
        "dev": "dotenv -e .env -- docker compose -f ./docker/compose/docker-compose.dev.yml up --watch",
        "dev:down": "docker compose -f ./docker/compose/docker-compose.dev.yml down",
        "dev:down:volumes": "docker compose -f ./docker/compose/docker-compose.dev.yml down --volumes",
        "dev:api": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml up --watch",
        "dev:web": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml up --watch",
        "dev:api:build": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml up --build --watch",
        "dev:web:build": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml up --build --watch",
        "dev:api:new": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml up --build --watch",
        "dev:web:new": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml up --build --watch",
        "dev:api:down": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml down",
        "dev:web:down": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml down",
        "dev:api:down:volumes": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml down --volumes",
        "dev:web:down:volumes": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml down --volumes",
        "dev:api:logs": "docker compose -f ./docker/compose/api/docker-compose.api.dev.yml logs -f",
        "dev:web:logs": "docker compose -f ./docker/compose/web/docker-compose.web.dev.yml logs -f",
        "dev:api:run": "envcli docker exec -it ${COMPOSE_PROJECT_NAME:-nextjs-directus}-api-dev /bin/sh",
        "dev:web:run": "envcli docker exec -it ${COMPOSE_PROJECT_NAME:-nextjs-directus}-web-dev /bin/sh",
        "dev:local": "turbo dev",
        "test:build": "bun packages/utils/env/src/cli.ts mock --command 'bun run build'",
        "build": "turbo build",
        "compile": "bun packages/utils/env/src/cli.ts mock --command 'turbo compile'",
        "local:build": "bun packages/utils/env/src/cli.ts mock --command 'turbo build'",
        "check-env": "bun packages/utils/env/src/cli.ts check",
        "check-env:api": "bun packages/utils/env/src/cli.ts check api",
        "check-env:web": "bun packages/utils/env/src/cli.ts check web",
        "check-env:doc": "bun packages/utils/env/src/cli.ts check doc",
        "start": "docker compose -f ./docker/compose/docker-compose.prod.yml down && docker compose -f ./docker/compose/docker-compose.prod.yml up --build",
        "start:local": "turbo start",
        "test": "turbo test",
        "test:watch": "turbo test:watch",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "coverage:report": "mkdir -p coverage && nyc report --temp-dir coverage --report-dir coverage/report --reporter=html --reporter=text --reporter=lcov && echo \"\\nğŸ“Š Merged coverage report generated at: coverage/report/index.html\"",
        "lint": "turbo lint",
        "format": "turbo prettify",
        "clean": "turbo clean && rimraf --glob 'packages/*/dist' 'apps/*/.next' '.turbo'",
        "clear:cache": "rimraf --glob '**/.turbo' '.turbo'",
        "init": "bun --bun scripts/init.ts",
        "diagnose": "bun --bun scripts/diagnose-build.ts",
        "add:template": "bun --bun scripts/add-upstream.ts",
        "merge:template": "bun run add:template && git fetch template && git merge template/main --allow-unrelated-histories",
        "generate": "turbo generate",
        "generate:directus:types": "turbo run generate:directus:types",
        "docker:dev": "bun --bun run dev",
        "docker:prod": "bun --bun run start",
        "docker:build": "docker compose -f ./docker/compose/docker-compose.prod-like.yml build",
        "docker:build:web": "docker build -f docker/builder/web/Dockerfile.web.build-time.prod . -t nextjs-directus-web:latest",
        "docker:build:api": "docker build -f docker/builder/api/Dockerfile.api.prod . -t directus-api:latest",
        "docker:cleanup:cache": "docker builder prune -f",
        "docker:cleanup:all": "docker system prune -a -f",
        "docker:size": "docker system df",
        "docker:images": "docker images --format \"table {{.Repository}}\\t{{.Tag}}\\t{{.Size}}\\t{{.CreatedAt}}\"",
        "prod": "dotenv -e .env -- docker compose -f ./docker/compose/docker-compose.prod-like.yml up --watch",
        "prod:new": "bun --bun run prod:down:volumes && docker compose -f ./docker/compose/docker-compose.prod-like.yml up --build --watch",
        "prod:down": "docker compose -f ./docker/compose/docker-compose.prod-like.yml down",
        "prod:down:volumes": "docker compose -f ./docker/compose/docker-compose.prod-like.yml down --volumes",
        "prod:api": "docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml up --watch",
        "prod:api:build": "docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml up --build --watch",
        "prod:api:new": "bun --bun run prod:api:down:volumes && docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml up --build --watch",
        "prod:api:down": "docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml down",
        "prod:api:down:volumes": "docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml down --volumes",
        "prod:web": "docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml up --watch",
        "prod:web:build": "docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml up --build --watch",
        "prod:web:new": "bun --bun run prod:web:down:volumes && docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml up --build --watch",
        "prod:web:down": "docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml down",
        "prod:web:down:volumes": "docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml down --volumes",
        "prod:logs:api": "docker compose -f ./docker/compose/api/docker-compose.api.prod-like.yml logs -f",
        "prod:logs:web": "docker compose -f ./docker/compose/web/docker-compose.web.prod-like.yml logs -f",
        "prod:api:run": "envcli docker exec -it ${COMPOSE_PROJECT_NAME:-nextjs-directus}-api-prod /bin/sh",
        "prod:web:run": "envcli docker exec -it ${COMPOSE_PROJECT_NAME:-nextjs-directus}-web-prod /bin/sh",
        "kill:api": "trycli-options --command \"envcli kill-port $:{NEXT_PUBLIC_API_PORT} && envcli wait-on $:{NEXT_PUBLIC_API_URL} -r\" --silent",
        "api": "dotenv -e .env -- bun --bun --cwd=./apps/api run --",
        "web": "dotenv -e .env -- bun --bun --cwd=./apps/web run --",
        "@repo/ui": "dotenv -e .env -- bun --bun --cwd=./packages/ui/base run --",
        "@repo/types": "dotenv -e .env -- bun --bun --cwd=./packages/types run --",
        "@repo/auth": "dotenv -e .env -- bun --bun --cwd=./packages/auth run --",
        "@repo/emails": "dotenv -e .env -- bun --bun --cwd=./packages/emails run --",
        "@repo-configs/typescript": "dotenv -e .env -- bun --bun --cwd=./packages/configs/typescript run --",
        "@repo-configs/tailwind": "dotenv -e .env -- bun --bun --cwd=./packages/configs/tailwind run --",
        "@repo-configs/eslint": "dotenv -e .env -- bun --bun --cwd=./packages/configs/eslint run --",
        "@repo/mcp-repo-manager": "dotenv -e .env -- bun --bun --cwd=./packages/mcp-repo-manager run --",
        ".": "dotenv -e .env -- bun --bun --cwd=./ run --",
        "rm:node_modules": "concurrently \"bun --bun x rimraf node_modules\" \"bun --bun x rimraf --glob packages/*/node_modules\" \"bun --bun x rimraf --glob apps/*/node_modules\"",
        "check": "bun x turbo run compile lint test type-check --continue",
        " ": " "
    },
