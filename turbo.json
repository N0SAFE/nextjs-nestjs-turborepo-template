{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "remoteCache": {
        "enabled": true
    },
    "globalDependencies": ["**/.env.*local", "**/.env", ".env.local"],
    "globalPassThroughEnv": [".env.local", "TURBO_TOKEN", "TURBO_TEAM"],
    "globalEnv": [
        "PLATFORM_LIBC",
        "API_URL",
        "NEXT_AUTH",
        "TURBO_TOKEN",
        "TURBO_TEAM",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "AUTH_SECRET",
        "NODE_ENV",
        "PHASE",
        "NEXT_PUBLIC_APP_URL",
        "APP_URL",
        "NEXT_PUBLIC_API_URL",
        "API_PORT",
        "DEV_AUTH_KEY",
        "DEV_AUTH_EMAIL",
        "CORS_ORIGIN",
        "LOG_LEVEL",
        "CHOKIDAR_USEPOLLING",
        "TRUSTED_ORIGINS",
        "AUTH_BASE_DOMAIN"
    ],
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "inputs": ["src/**", "public/**", "*.config.*", "package.json"]
        },
        "compile": {
            "dependsOn": ["^compile"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
            "inputs": ["src/**", "public/**", "*.config.*", "package.json"]
        },
        "start": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["build"]
        },
        "docker:build": {
            "cache": false,
            "dependsOn": ["build"]
        },
        "docker:dev": {
            "cache": false,
            "persistent": true
        },
        "init": {
            "dependsOn": ["^init", "clean"],
            "outputs": ["dist/**"],
            "cache": false
        },
        "generate:directus:types": {
            "cache": false,
            "dependsOn": ["^generate:directus:types"]
        },
        "generate": {
            "dependsOn": ["^generate", "generate:directus:types"],
            "cache": false
        },
        "test": {
            "dependsOn": ["@repo-configs/vitest#build"],
            "inputs": ["src/**", "test/**", "**/*.test.*", "**/*.spec.*", "*.config.*", "vitest.config.*", "vitest.setup.*"]
        },
        "test:watch": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "@repo-configs/eslint#build", "@repo-configs/prettier#build", "@repo-configs/vitest#build"]
        },
        "test:ui": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build", "@repo-configs/eslint#build", "@repo-configs/prettier#build", "@repo-configs/vitest#build"]
        },
        "test:coverage": {
            "dependsOn": ["^build", "@repo-configs/eslint#build", "@repo-configs/prettier#build", "@repo-configs/vitest#build"],
            "outputs": ["coverage/**"],
            "inputs": ["src/**", "test/**", "**/*.test.*", "**/*.spec.*", "*.config.*", "vitest.config.*", "vitest.setup.*"]
        },
        "lint": {
            "dependsOn": ["@repo-configs/eslint#build", "doc#compile"],
            "inputs": ["src/**", "*.config.*", "package.json"]
        },
        "prettify": {
            "dependsOn": ["^lint", "@repo-configs/prettier#build"]
        },
        "clean": {
            "cache": false
        },
        "type-check": {
            "inputs": ["**/*.ts", "**/*.tsx", "package.json", "tsconfig.json"]
        }
    }
}
