# System Configuration (not exported to .env)
SYSTEM_ENV_TEMPLATE_CONFIG={{json|skip_export=true|default={"groups":[{"id":"project","name":"Project","description":"Basic project configuration"},{"id":"api","name":"API","description":"Backend API configuration"},{"id":"web","name":"Web Application","description":"Frontend web app configuration"},{"id":"database","name":"Database","description":"Database connection and credentials"},{"id":"auth","name":"Authentication","description":"Authentication and security settings"},{"id":"traefik","name":"Traefik","description":"Reverse proxy and domain management"},{"id":"environment","name":"Environment","description":"Environment-specific settings"},{"id":"development","name":"Development","description":"Development tools and features"}]}}}

# Project Configuration
COMPOSE_PROJECT_NAME={{string|group=project|default=nextjs-nestjs|label=Project Name|description=Unique name for Docker containers to avoid conflicts}}

# API Configuration  
NEXT_PUBLIC_API_URL={{url|group=api|protocol=http,https|label=API URL|description=URL where the NestJS API will be accessible|default=http://localhost:${3001 + $index * 10}}}
API_PORT={{number|group=api|min=1000|max=65535|allow=80,443|label=API Port|description=Port for the NestJS API service (auto-extracted if explicit port in URL, otherwise prompts with default)|transformer=extract_port|source=NEXT_PUBLIC_API_URL}}
API_PING_PATH={{string|group=api|default=/health|label=API Health Check Path|description=Path for API health checking}}
API_ADMIN_TOKEN={{string|group=api|transformer=generate_secret|length=32|label=Admin Token|description=Secret token for API administration}}
UPLOADS_DIR={{string|group=api|default=/app/apps/api/uploads|label=Uploads Directory|description=Absolute path to uploads directory in container|optional=true}}

# Web App Configuration
NEXT_PUBLIC_APP_URL={{url|group=web|protocol=http,https|label=Web App URL|description=URL where the Next.js app will be accessible|default=http://localhost:${3000 + $index * 10}}}
NEXT_PUBLIC_APP_PORT={{number|group=web|min=1000|max=65535|allow=80,443|label=Web App Port|description=Port for the Next.js web application (auto-extracted if explicit port in URL, otherwise prompts with default)|transformer=extract_port|source=NEXT_PUBLIC_APP_URL}}
NEXT_PUBLIC_DOC_URL={{url|group=web|protocol=http,https|label=Docs URL|description=URL where the documentation site is accessible (shows a Docs link in navbar when set)|default=http://localhost:${3020 + $index * 10}|optional=true}}
NEXT_PUBLIC_DOC_PORT={{number|group=web|min=1000|max=65535|allow=80,443|label=Docs Port|description=Port for the docs site (auto-extracted if explicit port in URL)|transformer=extract_port|source=NEXT_PUBLIC_DOC_URL|optional=true}}

# ========================================
# Database Configuration (Development)
# ========================================
# Note: In development, DATABASE_URL is hardcoded in docker-compose to:
# postgresql://postgres:postgres@api-db-dev:5432/${DB_DATABASE}
# You only need to configure the database name.
DB_DATABASE={{string|group=database|default=nestjs_api|label=Database Name|description=Name of the PostgreSQL database}}

# Authentication
AUTH_SECRET={{string|group=auth|transformer=generate_secret|length=32|label=NextAuth Secret|description=Secret key for NextAuth.js authentication|secure=true}}
DEV_AUTH_KEY={{string|group=development|transformer=generate_secret|length=32|label=Dev Auth Key|description=Secret key for development Bearer token authentication (allows admin access)|secure=true}}
DEV_AUTH_EMAIL={{string|group=development|label=Dev Auth Email|description=Email of the user to impersonate when using master token auth in development (must exist in database)|optional=true}}
NEXT_PUBLIC_DEV_AUTH_KEY={{string|group=development|transformer=copy|source=DEV_AUTH_KEY|label=Dev Auth Key (Public)|description=Copy of DEV_AUTH_KEY for client-side access in development|secure=true}}

# Environment Settings
NODE_ENV=development

# Development Features
MILLION_LINT={{boolean|group=development|labels=enable,disable|default=disable|label=Million Lint|description=Enable Million.js linting for React optimization}}
REACT_SCAN={{boolean|group=development|labels=enable,disable|default=disable|label=React Scan|description=Enable React component scanning for debugging}}
NEXT_PUBLIC_SHOW_AUTH_LOGS={{boolean|group=development|labels=yes,no|default=no|label=Show Auth Logs|description=Display authentication logs in development}}

# Debug Configuration
NEXT_PUBLIC_DEBUG={{string|group=development|optional=true|label=Debug Scopes|description=Comma-separated debug scopes (e.g., 'middleware/**', 'middleware/auth,middleware/env', 'middleware/{auth,env}/**'). Supports wildcards and brace expansion|placeholder=middleware/**}}
