# syntax=docker/dockerfile:1-labs
# Development Dockerfile for NestJS API
# Multi-stage build with pruner for optimized dependencies
# Supports BuildKit cache mounts for faster rebuilds

# ===================================
# Stage 1: Base - Common dependencies
# ===================================
FROM oven/bun:1.3.1-alpine AS base

# Install system dependencies
RUN apk add --no-cache curl wget bash git python3 make g++

# Copy Node.js 22 installation from the Node.js image (binaries + libraries)
COPY --from=node:22-alpine /usr/local /usr/local

# Create symbolic links to ensure they're in PATH
RUN ln -sf /usr/local/bin/node /usr/bin/node && \
    ln -sf /usr/local/bin/npm /usr/bin/npm && \
    ln -sf /usr/local/bin/npx /usr/bin/npx

# Install Turbo and NestJS CLI globally with cache mount
RUN --mount=type=cache,target=/root/.bun \
    bun install -g turbo@^2 @nestjs/cli

WORKDIR /app

# ===================================
# Stage 2: Pruner - Prune monorepo for api and install dependencies
# ===================================
FROM base AS pruner

# Copy only package.json, lock files, and turbo.json - these define dependencies
# Using glob patterns to automatically include all workspace package.json files
# This prevents cache invalidation when source code changes
COPY package.json bun.lock* turbo.json ./
COPY --parents apps/*/package.json packages/*/package.json packages/*/*/package.json ./

# Run turbo prune to isolate api and its dependencies (use cache mount for bun)
RUN --mount=type=cache,target=/root/.bun \
    bun x turbo prune api --docker

# ===================================
# Stage 2.5: Config Copier - Copy ONLY config files needed by postinstall
# ===================================
FROM base AS config-copier
WORKDIR /app
COPY --from=pruner /app/out/json/ /tmp/prune-structure/
# Copy only root files and specific config files for postinstall scripts
RUN --mount=type=bind,source=.,target=/mnt/source \
    cd /mnt/source && \
    cp package.json turbo.json /app/ 2>/dev/null || true && \
    cp bun.lock* /app/ 2>/dev/null || true && \
    # For doc app: copy source.config.ts if doc is in pruned structure
    if [ -f /tmp/prune-structure/apps/doc/package.json ]; then \
        mkdir -p /app/apps/doc && \
        cp apps/doc/source.config.ts /app/apps/doc/ 2>/dev/null || true; \
    fi

# ===================================
# Stage 3: Installer - Install dependencies
# ===================================
FROM base AS installer
RUN apk update
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copy pruned package.json structure and config files needed by postinstall
COPY --from=pruner /app/out/full/ .
COPY --from=config-copier /app/ /app/

# Install dependencies (postinstall scripts can now access config files)
RUN --mount=type=cache,target=/root/.bun \
    --mount=type=cache,target=/root/.cache \
    bun i --verbose

# ===================================
# Stage 4: Source Copier - Copy all source files
# ===================================
FROM base AS source-copier
WORKDIR /app
COPY --from=pruner /app/out/json/ /tmp/prune-structure/
# Copy ALL source files for pruned workspaces
RUN --mount=type=bind,source=.,target=/mnt/source \
    cd /mnt/source && \
    for pkgJson in $(find /tmp/prune-structure -name "package.json" -type f); do \
        relPath=$(echo "$pkgJson" | sed 's|/tmp/prune-structure/||' | sed 's|/package.json||'); \
        if [ -d "/mnt/source/$relPath" ]; then \
            mkdir -p "/app/$relPath"; \
            tar cf - "$relPath" | tar xf - -C /app/; \
        fi; \
    done && \
    cp /mnt/source/package.json /mnt/source/turbo.json /app/ 2>/dev/null || true && \
    cp /mnt/source/bun.lock* /app/ 2>/dev/null || true

# ===================================
# Stage 5: Runner - Development runtime
# ===================================
FROM base AS runner
WORKDIR /app

# Create npm symlink to avoid "npm not found" warnings during Next.js build
RUN ln -sf $(which bun) /usr/local/bin/npm

# Set development environment
ENV NODE_ENV=development
ENV LOG_LEVEL=debug

# Copy source files from source-copier stage (only pruned workspaces)
COPY --from=source-copier /app/ /app/

# Copy all node_modules using bind mount to avoid --parents issues
# Use tar to preserve all symlinks correctly (cp can follow symlinks in bind mounts)
RUN --mount=type=bind,from=installer,source=/app,target=/mnt/installer \
    cd /mnt/installer && tar cf - node_modules | tar xf - -C /app && \
    find /mnt/installer/apps -name node_modules -type d | while read dir; do \
        target_dir=$(echo "$dir" | sed 's|/mnt/installer/||'); \
        mkdir -p "$(dirname "$target_dir")"; \
        cd /mnt/installer && tar cf - "$(echo "$dir" | sed 's|/mnt/installer/||')" | tar xf - -C /app; \
    done && \
    find /mnt/installer/packages -name node_modules -type d | while read dir; do \
        target_dir=$(echo "$dir" | sed 's|/mnt/installer/||'); \
        mkdir -p "$(dirname "$target_dir")"; \
        cd /mnt/installer && tar cf - "$(echo "$dir" | sed 's|/mnt/installer/||')" | tar xf - -C /app; \
    done

COPY --parents --chmod=a+w .turbo/ **/.turbo/ ./

# Run build during image build (runner stage) so compilation happens at build time.
# Use BuildKit cache for bun to speed up subsequent builds.
RUN --mount=type=cache,target=/root/.bun \
    bun x turbo run build --filter=api... --filter=!api

# Start the API dev server at container runtime only.
CMD ["sh", "-c", "bun x dotenv -e .env -- bun x turbo run dev --filter=api..."]
