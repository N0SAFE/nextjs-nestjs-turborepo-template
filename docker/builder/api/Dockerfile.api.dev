# syntax=docker/dockerfile:1-labs
# Development Dockerfile for NestJS API
# Multi-stage build optimized for caching:
# base -> pruner -> installer -> source-copier -> runner

# ===================================
# Stage 1: Base - System dependencies
# ===================================
FROM oven/bun:1.3.3-alpine AS base

# Install system dependencies in single layer
RUN apk add --no-cache curl wget bash git python3 make g++ tar libc6-compat

# Copy Node.js 22 installation from the Node.js image (binaries + libraries)
COPY --from=node:22-alpine /usr/local /usr/local

# Create symbolic links for Node.js
RUN ln -sf /usr/local/bin/node /usr/bin/node && \
    ln -sf /usr/local/bin/npm /usr/bin/npm && \
    ln -sf /usr/local/bin/npx /usr/bin/npx

# Install global tools with cache mount
RUN --mount=type=cache,target=/root/.bun bun install -g turbo@^2 @nestjs/cli

WORKDIR /app

# ===================================
# Stage 2: Pruner - Determine which workspaces are needed
# ===================================
FROM base AS pruner
WORKDIR /app

# Copy ALL source files (turbo prune needs full source to determine dependencies)
COPY . .

# Run turbo prune to identify which apps/packages are needed for api
RUN --mount=type=cache,target=/root/.bun \
    bun x turbo prune api --docker

# ===================================
# Stage 3: Installer - Install dependencies for pruned workspaces only
# ===================================
FROM base AS installer
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Copy ONLY the pruned package.json structure (not all workspaces)
COPY --from=pruner /app/out/json/ .
# Use full original lockfile (turbo prune's out/bun.lock is buggy - see turborepo#10783)
COPY --from=pruner /app/bun.lock ./bun.lock

# Install dependencies for pruned workspaces only
RUN --mount=type=cache,target=/root/.bun \
    --mount=type=cache,target=/root/.cache \
    bun install --frozen-lockfile || bun install

# ===================================
# Stage 4: Source-Copier - Extract only the pruned source files
# ===================================
FROM base AS source-copier
WORKDIR /app

# Copy the pruned output structure to know which workspaces we need
COPY --from=pruner /app/out/json/ /tmp/prune-structure/

# Copy only the source files for workspaces identified by turbo prune
RUN --mount=type=bind,from=pruner,source=/app,target=/mnt/pruner \
    # Copy root config files
    cp /mnt/pruner/package.json /mnt/pruner/turbo.json /app/ 2>/dev/null || true && \
    cp /mnt/pruner/bun.lock* /app/ 2>/dev/null || true && \
    cp /mnt/pruner/bunfig.toml /app/ 2>/dev/null || true && \
    # Copy pruned apps (full source, not just package.json)
    for appPkg in $(find /tmp/prune-structure/apps -name "package.json" -type f 2>/dev/null); do \
        appDir=$(dirname "$appPkg" | sed 's|/tmp/prune-structure/||'); \
        if [ -d "/mnt/pruner/$appDir" ]; then \
            mkdir -p "/app/$appDir" && \
            cp -r /mnt/pruner/$appDir/. /app/$appDir/ 2>/dev/null || true; \
        fi; \
    done && \
    # Copy pruned packages (full source, not just package.json)
    for pkgJson in $(find /tmp/prune-structure/packages -name "package.json" -type f 2>/dev/null); do \
        pkgDir=$(dirname "$pkgJson" | sed 's|/tmp/prune-structure/||'); \
        if [ -d "/mnt/pruner/$pkgDir" ]; then \
            mkdir -p "/app/$pkgDir" && \
            cp -r /mnt/pruner/$pkgDir/. /app/$pkgDir/ 2>/dev/null || true; \
        fi; \
    done

# ===================================
# Stage 5: Runner - Development runtime
# ===================================
FROM base AS runner
WORKDIR /app

# Create npm symlink to avoid "npm not found" warnings
RUN ln -sf $(which bun) /usr/local/bin/npm

# Set development environment
ENV NODE_ENV=development
ENV LOG_LEVEL=debug

# Copy pruned source files from source-copier
COPY --from=source-copier /app/ .

# Copy node_modules from installer
# Use bind mount + tar to preserve symlinks and set ownership
RUN --mount=type=bind,from=installer,source=/app,target=/mnt/installer \
    # Copy root node_modules
    cd /mnt/installer && tar cf - node_modules | tar xf - -C /app --owner=root --group=root && \
    # Copy app-level node_modules if they exist
    find /mnt/installer/apps -name node_modules -type d 2>/dev/null | while read dir; do \
        relDir=$(echo "$dir" | sed 's|/mnt/installer/||'); \
        mkdir -p "/app/$(dirname $relDir)" && \
        cd /mnt/installer && tar cf - "$relDir" | tar xf - -C /app --owner=root --group=root; \
    done && \
    # Copy package-level node_modules if they exist
    find /mnt/installer/packages -name node_modules -type d 2>/dev/null | while read dir; do \
        relDir=$(echo "$dir" | sed 's|/mnt/installer/||'); \
        mkdir -p "/app/$(dirname $relDir)" && \
        cd /mnt/installer && tar cf - "$relDir" | tar xf - -C /app --owner=root --group=root; \
    done

# Copy turbo cache directories
COPY --parents --chmod=a+w .turbo/ **/.turbo/ ./

# Build api app dependencies (packages that api depends on)
RUN --mount=type=cache,target=/root/.bun \
    bun x turbo run build --filter=api... --filter=!api

# Start the API dev server at container runtime
CMD ["sh", "-c", "bun x dotenv -e .env -- bun x turbo run dev --filter=api..."]
